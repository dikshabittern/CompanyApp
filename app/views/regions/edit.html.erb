<div class="d-flex justify-content-center"><h1>Edit State</h1></div><br>
<%= form_with(model: @region,local: true)  do |f| %>
	
	<div class="form-group d-flex justify-content-center">
			<%= f.label :region_name, "Region name:", class: "control-label col-md-3"%>
			<%= f.text_field :region_name, class: "form-control col-md-8" %>
	</div>

	<div class="offset-md-5">
			<%= f.submit "Save", class: "btn btn-primary" %>
			<%= f.submit "Cancel", class: "btn btn-info" %>
			<%= link_to 'Back', regions_path, class: " btn btn-success"%>
	</div>
<% end %>