<div class="d-flex justify-content-center"><h1>Edit User Region</h1></div><br>
<%= form_with(model: @user_region, local: true)  do |f| %>
	
	<div class="form-group d-flex justify-content-center">
		<%= f.label :User , "User name:", class: "control-label col-md-3"%>
		<%= f.collection_select :user_id, User.all, :id, :first_name, {},{:class=>"form-control col-md-8"} %>
	</div>
	<div class="form-group d-flex justify-content-center">
		<%= f.label :Region , "Region:", class: "control-label col-md-3"%>
		<%= f.collection_select :region_id,Region.all, :id,:region_name, {}, {:class=>"form-control col-md-8"} %>
	</div>

	

	<div class="offset-md-5">
			<%= f.submit "Save", class: "btn btn-primary" %>
			<%= f.submit "Cancel", class: "btn btn-info" %>
			<%= link_to 'Back' ,  user_regions_path, class: " btn btn-success"%>
	</div>
<% end %>