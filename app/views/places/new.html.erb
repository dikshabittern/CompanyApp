<div class="d-flex justify-content-center"><h1>Create Place</h1></div><br>
<%= form_with scope: :place, url: places_path,	local: true  do |f| %>
	
	<div class="form-group d-flex justify-content-center">
			<%= f.label :place_name, "Place name:", class: "control-label col-md-3"%>
			<%= f.text_field :place_name, class: "form-control col-md-8" %>
	</div>

	<div  class="form-group d-flex justify-content-center">
			<%= f.label :company_id, "Company Id:", class: "control-label col-md-3"%>
			<%= f.collection_select :company_id, Company.all, :id, :name,{}, {:class=>"form-control col-md-8"} %>
	</div>
	
	<div class="offset-md-5">
			<%= f.submit "Save", class: "btn btn-primary" %>
			<%= f.submit "Cancel", class: "btn btn-info" %>
			<%= link_to 'Back' , places_path, class: " btn btn-success"%>
	</div>
<% end %>