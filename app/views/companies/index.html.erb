<div class="d-flex justify-content-center"><h1>List of Companies</h1></div><br>

<table class="table table-striped table-dark table-bordered">
	<thead>
		<tr>
			<th>Name</th>
			<th>Country Id</th>
			<th>State Id</th>
			<th>City Id</th>
			<th>Post Code</th>
			<th>Start Date</th>
			<th>Active</th>
			<th>
				<%= link_to 'Back' , new_company_path, :class=> "btn btn-outline-info"%>
			</th>
			
		</tr>
	</thead>
	<tbody>
		<% @companies.each  do |c|%>
		<tr>
			<td><%= c.name %></td>
			<td><%= c.country_id %></td>
			<td><%= c.state_id %></td>
			<td><%= c.city_id %></td>
			<td><%= c.postcode %></td>
			<td><%= c.startdate%></td>
			<td><%= c.active %></td>
			<td><%= link_to 'Show',  company_path(c) %></td>
			<td><%= link_to 'Edit', edit_company_path(c) %></td>
			<td><%= link_to 'Delete',  company_path(c), method: :delete, data: {confirm: 'Are You Sure'} %></td>
		</tr>
		<div>
		</div>
		<% end %>
	</tbody>
</table>