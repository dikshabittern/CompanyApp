<div class="d-flex justify-content-center"><h1>List of States</h1></div><br>

<table class="table table-striped table-dark table-bordered">
	<thead>
		<tr>
			<th>State Name</th>
		</tr>
	</thead>
	<tbody>
		<% @states.each  do |state|%>
		<tr>
			<td><%= state.state_name %></td>
			<td><%= link_to 'Show',  state_path(state) %></td>
			<td><%= link_to 'Edit', edit_state_path(state) %></td>
			<td><%= link_to 'Delete',  state_path(state), method: :delete, data: {confirm: 'Are You Sure'} %></td>
		</tr>
		<div>
		</div>
		<% end %>
	</tbody>
</table>
