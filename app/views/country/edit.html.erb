<div class="d-flex justify-content-center"><h1>Edit Country</h1></div><br>
<%= form_with(model: @country, local: true) do |f| %>	
	<div class="form-group d-flex justify-content-center">
			<%= f.label :country_name, "Country Name:", class: "control-label col-md-3"%>
			<%= f.text_field :country_name, class: "form-control col-md-8" %>
	</div>

	<div class="offset-md-5">
			<%= f.submit "Save", class: "btn btn-primary" %>
			<%= f.submit "Cancel", class: " btn btn-info" %>
			<%= link_to 'Back' , country_index_path, class: " btn btn-success"%>
	</div>
<% end %>