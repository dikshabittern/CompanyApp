<div class="d-flex justify-content-center"><h1>Create Image</h1></div><br>
<%= form_with scope: :image, url: images_path,	local: true  do |f| %>
	
	<div  class="form-group d-flex justify-content-center">
			<%= f.label :user_id, "User Id:", class: "control-label col-md-3"%>
			<%#= f.select :user_id,[["Apple", 1], ["Grape", 2]], { class: "selectpicker" },:class=>"form-control col-md-8" %>
			<%=f.collection_select :user_id, User.all, :id, :first_name,{}, {class: "form-control col-md-8"}  %>
	</div>
	
	<div class="form-group d-flex justify-content-center">
			<%= f.label :real_name, "Real name:", class: "control-label col-md-3"%>
			<%= f.text_field :real_name, class: "form-control col-md-8" %>
	</div>

	<div class="form-group d-flex justify-content-center">
			<%= f.label :image, "Image:", class: "control-label col-md-3"%>
			<%= f.file_field :image, class: "form-control col-md-8" %>
	</div>

	<div class="offset-md-5">
			<%= f.submit "Save", class: "btn btn-primary" %>
			<%= f.submit "Cancel", class: "btn btn-info" %>
			<%= link_to 'Back' , images_path, class: " btn btn-success"%>
	</div>
<% end %>