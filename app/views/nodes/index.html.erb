<div class="d-flex justify-content-center"><h1>List of Nodes</h1></div><br>

<table class="table table-striped table-dark table-bordered">
	<thead>
		<tr>
			<th>Node name/th>
			<th>Place Id</th>
		</tr>
	</thead>
	<tbody>
		<% @nodes.each  do |node|%>
		<tr>
			<td><%= node.node_name %></td>
			<td><%=	node.place_id %></td>
			<td><%= link_to 'Show',  node_path(node) %></td>
			<td><%= link_to 'Edit', edit_node_path(node) %></td>
			<td><%= link_to 'Delete',  node_path(node), method: :delete, data: {confirm: 'Are You Sure'} %></td>
		</tr>
		<div>
		</div>
		<% end %>
	</tbody>
</table>
