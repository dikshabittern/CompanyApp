<div class="d-flex justify-content-center"><h1>Edit Node</h1></div><br>
<%= form_with(model: @node,local: true)  do |f| %>
	
	<div class="form-group d-flex justify-content-center">
			<%= f.label :node_name, "Node name:", class: "control-label col-md-3"%>
			<%= f.text_field :node_name, class: "form-control col-md-8" %>
	</div>

	<div class="form-group d-flex justify-content-center">
			<%= f.label :place_id, "Place Id:", class: "control-label col-md-3"%>
			<%= f.text_field :place_id, class: "form-control col-md-8" %>
	</div>
	
	<div class="offset-md-5">
			<%= f.submit "Save", class: "btn btn-primary" %>
			<%= f.submit "Cancel", class: "btn btn-info" %>
			<%= link_to 'Back', nodes_path, class: " btn btn-success"%>
	</div>
<% end %>