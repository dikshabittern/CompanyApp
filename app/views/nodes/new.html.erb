<div class="d-flex justify-content-center"><h1>Create Node</h1></div><br>
<%= form_with scope: :node, url: nodes_path, local: true  do |f| %>
	
	<div class="form-group d-flex justify-content-center">
			<%= f.label :node_name, "Node name:", class: "control-label col-md-3"%>
			<%= f.text_field :node_name, class: "form-control col-md-8" %>
	</div>

	<div  class="form-group d-flex justify-content-center">
			<%= f.label :place_id, "Place:", class: "control-label col-md-3"%>
			<%= f.collection_select :place_id, Place.all, :id, :place_name,{}, {:class=>"form-control col-md-8"} %>
	</div>
	
	<div class="offset-md-5">
			<%= f.submit "Save", class: "btn btn-primary" %>
			<%= f.submit "Cancel", class: "btn btn-info" %>
			<%= link_to 'Back' , nodes_path, class: " btn btn-success"%>
	</div>
<% end %>